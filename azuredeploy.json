{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "StorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD Domain created "
      }
    },
    "vnetAddressPrefix": {
      "type": "string",
      "defaultValue": "10.1.0.0/16",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "subnetPrefix": {
      "type": "string",
      "defaultValue": "10.1.1.0/24",
      "metadata": {
        "description": "Subnet Prefix"
      }
    },
    "DomainPrivateIP": {
      "type": "string",
      "defaultValue": "10.1.1.4",
      "metadata": {
        "description": "The IP address of the Domain Controller."
      }

    },
    "ExchangePrivateIP": {
      "type": "string",
      "defaultValue": "10.1.1.5",
      "metadata": {
        "description": "The IP address of your exchange server."
      }

    }
},
  "variables": {
    "_artifactsLocation": "https://raw.githubusercontent.com/khansaif786/Exchange2016Lab/master",
    "Shared-ResourcesTemplateUri": "[concat(variables('_artifactsLocation'),'/nestedtemplates/Shared-Resources.json')]",
    "EXLAB-DC-ResourcesTemplateUri": "[concat(variables('_artifactsLocation'),'/nestedtemplates/EXLAB-DC.json')]",
    "EXLAB-EXCH-ResourcesTemplateUri": "[concat(variables('_artifactsLocation'),'/nestedtemplates/EXLAB-EXCH.json')]",
    "EXCH-VMExt-ResourcesTemplateUri": "[concat(variables('_artifactsLocation'),'/nestedtemplates/VMExt-EXCH.json')]",
    "StorageAccountName": "\"[concat('storage', uniqueString(resourceGroup().id",
    "Subnet1Name": "Subnet-1",
    "VMName": {
      "Name": [ "EXLAB-DC", "EXLAB-EXCH" ]
    }
  },
    "resources": [
      {
        "name": "Shared-Resources",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('Shared-ResourcesTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "StorageAccountType": {
              "value": "[parameters('StorageAccountType')]"
            },
            "VnetPrefix": {
              "value": "[parameters('vnetAddressPrefix')]"
            },
            "VnetSubnet1Name": {
              "value": "[variables('Subnet1Name')]"
            },
            "VnetSubnet1Prefix": {
              "value": "[parameters('vnetAddressPrefix')]"
            },
            "StorageAccountName": {
              "value": "[variables('StorageAccountName')]"
            }
          }
        }
      },
      {
        "name": "EXLAB-DC",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
          "[concat('Microsoft.Resources/deployments/', 'Shared-Resources')]"
        ],
          "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('EXLAB-DC-ResourcesTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
            "parameters": {
              "AdminUserName": {
                "value": "[parameters('AdminUserName')]"
              },
              "AdminPassword": {
                "value": "[parameters('AdminPassword')]"
              },
              "DomainName": {
                "value": "[parameters('DomainName')]"
              },
              "_artifactsLocation": {
                "value": "[variables('_artifactsLocation')]"
              },
              "StorageAccountName": {
                "value": "[variables('StorageAccountName')]"
              },
              "DCPrivateIP": {
                "value":  "[parameters('DomainPrivateIP')]"
              }

            }
        }
      },
      {
        "name": "EXLAB-EXCH",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
          "[concat('Microsoft.Resources/deployments/', 'Shared-Resources')]",
          "[concat('Microsoft.Resources/deployments/', 'EXLAB-DC')]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('EXLAB-EXCH-ResourcesTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "AdminUserName": {
              "value": "[parameters('AdminUserName')]"
            },
            "AdminPassword": {
              "value": "[parameters('AdminPassword')]"
            },
            "DomainName": {
              "value": "[parameters('DomainName')]"
            },
            "_artifactsLocation": {
              "value": "[variables('_artifactsLocation')]"
            },
            "StorageAccountName": {
              "value": "[variables('StorageAccountName')]"
            },
            "ExchPrivateIP": {
              "value":  "[parameters('ExchangePrivateIP')]"
            }
          }
        }
      },
      {
        "name": "VMExt-EXCH",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2016-09-01",
        "dependsOn": [
          "[concat('Microsoft.Resources/deployments/', 'Shared-Resources')]",
          "[concat('Microsoft.Resources/deployments/', 'EXLAB-DC')]",
          "[concat('Microsoft.Resources/deployments/', 'EXLAB-EXCH')]"
        ],
        "properties": {
          "mode": "Incremental",
          "templateLink": {
            "uri": "[variables('EXCH-VMExt-ResourcesTemplateUri')]",
            "contentVersion": "1.0.0.0"
          },
          "parameters": {
            "AdminUserName": {
              "value": "[parameters('AdminUserName')]"
            },
            "AdminPassword": {
              "value": "[parameters('AdminPassword')]"
            },
            "DomainName": {
              "value": "[parameters('DomainName')]"
            },
            "_artifactsLocation": {
              "value": "[variables('_artifactsLocation')]"
            }
          }
        }
      }
    ],
    "outputs": {}
  }
