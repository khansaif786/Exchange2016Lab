{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AdminUserName": {
      "type": "string",
      "minLength": 1
    },
    "AdminPassword": {
      "type": "securestring"
    },
    "DomainName": {
      "type": "string",
      "metadata": {
        "description": "The FQDN of the AD Domain created "
      }
    },
    "StorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "The Storage Account Name "
      }
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
      }
    },
    //"_artifactsLocationSasToken": {
    //  "type": "securestring",
    //  "metadata": {
    //    "description": "Auto-generated token to access _artifactsLocation"
    //  }
    //}
  },
  "variables": {
    "StorageAccountName": "[concat('storage', uniqueString(resourceGroup().id))]",
    "VNetName": "ExVnet",
    "ExVnetPrefix": "10.0.0.0/16",
    "ExVnetSubnetName": "Subnet-1",
    "ExVnetSubnetPrefix": "10.0.0.0/24",
    "VMName": "EXLAB-EXCH",
    "NicName": "[concat(variables('VMName'), '-NIC')]",
    "internalIP": "10.0.0.5",
    "PublicIPName": "[concat(variables('VMName'), '-pip')]",
    "PublicIPDnsName": "[concat(uniqueString(resourceGroup().id), '-exchpip')]",
    "VnetID": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks', 'ExVnet')]",
    "SubnetRef": "[concat(variables('VnetID'), '/subnets/', 'Subnet-1')]",
    "ImagePublisher": "MicrosoftWindowsServer",
    "ImageOffer": "WindowsServer",
    "WindowsOSVersion": "2012-R2-Datacenter",
    "VmSize": "Standard_D2_v2",
    "VHDStorageAccountContainerName": "vhds",
    "OSDiskName": "[concat(variables('VMName'), 'osdisk')]"
  },
  "resources": [
    {
      "name": "[variables('PublicIPName')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [],
      "tags": {
        "displayName": "Public-IP"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic",
        "dnsSettings": {
          "domainNameLabel": "[variables('PublicIPDnsName')]"
        }
      }
    },
    {
      "name": "[variables('NicName')]",
      "type": "Microsoft.Network/networkInterfaces",
      "location": "[resourceGroup().location]",
      "apiVersion": "2016-03-30",
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName'))]"
      ],
      "tags": {
        "displayName": "Exch-NIC"
      },
      "properties": {
        "ipConfigurations": [
          {
            "name": "[concat('ipcfg-', variables('NicName'))]",
            "properties": {
              "privateIPAllocationMethod": "Static",
              "privateIPAddress": "[variables('internalIP')]",
              "subnet": {
                "id": "[variables('SubnetRef')]"
              },
              "publicIPAddress": {
                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('PublicIPName'))]"
              }
            }
          }
        ]
      }
    },
    {
      "name": "[variables('VMName')]",
      "type": "Microsoft.Compute/virtualMachines",
      "location": "[resourceGroup().location]",
      "apiVersion": "2015-06-15",
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', variables('NicName'))]"
      ],
      "tags": {
        "displayName": "EXCH-VM"
      },
      "properties": {
        "hardwareProfile": {
          "vmSize": "[variables('VmSize')]"
        },
        "osProfile": {
          "computerName": "[variables('VMName')]",
          "adminUsername": "[parameters('AdminUsername')]",
          "adminPassword": "[parameters('AdminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('ImagePublisher')]",
            "offer": "[variables('ImageOffer')]",
            "sku": "[variables('WindowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[variables('OSDiskName')]",
            "vhd": {
              "uri": "[concat('http://', parameters('StorageAccountName'), '.blob.core.windows.net/vhd/', variables('OSDiskName'), '.vhd')]"
            },
            "caching": "ReadWrite",
            "createOption": "FromImage"
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('NicName'))]"
            }
          ]
        }
      }
    }

  ],
  "outputs": {}
}